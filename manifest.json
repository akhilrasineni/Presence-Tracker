
{
  "manifest_version": 3,
  "name": "Presence & Break Tracker",
  "version": "1.1.0",
  "description": "Track office presence, set task reminders, and get funny break alerts.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Presence Tracker"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdn.tailwindcss.com https://esm.sh; object-src 'self'"
  }
}
